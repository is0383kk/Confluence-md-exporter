{
  "manifest_version": 3,
  "name": "Confluence → Markdown Exporter (Icon-click)",
  "version": "1.0.5",
  "description": "アイコンクリックでConfluence本文をMarkdown保存。Service WorkerはDataURLを使用してDL。",
  "permissions": [
    "scripting",
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Export Confluence to Markdown",
    "default_icon": "icon.png"
  }
}